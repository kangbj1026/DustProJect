<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeLayout">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollAll"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="false"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity">
        <!--
        note 상단의 RecyclerView 에는 데이터베이스로부터 가져온 JSON 형식의
        note 데이터를 파싱해서 항목별로 보여줍니다. 하단의 TextView 에는 JSON 형식의
        note 데이터 또는 각종 에러를 보여주는 용도로 사용됩니다. -->
        <TextView
            android:id="@+id/mainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:gravity="center_horizontal"
            android:text="화재 및 유독가스 감시중"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/mainFigure"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#F4FFFF"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mainText"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/charView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imageColor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/charView"
            app:layout_constraintStart_toStartOf="@id/charView" />

        <ImageView
            android:id="@+id/imageChar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageColor"
            app:layout_constraintStart_toStartOf="@+id/imageColor" />
        <TextView
            android:id="@+id/colorText"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#F4FFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageColor"
            app:layout_constraintEnd_toEndOf="@+id/imageColor"
            app:layout_constraintStart_toStartOf="@+id/imageColor"
            app:layout_constraintTop_toTopOf="@+id/imageColor" />

        <TextView
            android:id="@+id/pm10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="미세먼지 PM10"
            android:textColor="#000000"
            android:textSize="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/charView"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dustView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#00ff0000"
            android:gravity="center_horizontal"
            android:overScrollMode="never"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/pm10"
            app:layout_constraintStart_toStartOf="@+id/pm10"
            app:layout_constraintTop_toBottomOf="@+id/pm10" />
        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:layout_constraintEnd_toEndOf="@+id/mainFigure"
            app:layout_constraintStart_toStartOf="@+id/mainText"
            app:layout_constraintTop_toBottomOf="@+id/charView">
            <TextView
                android:id="@+id/humiName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="습도"
                android:textColor="#0064FF"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/humi"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tempName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="온도"
                android:textColor="#0064FF"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/temp"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvocName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1.2"
                android:text="TVOC"
                android:layout_marginRight="10dp"
                android:textColor="#0064FF"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tvoc"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="0dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/mainFigure"
            app:layout_constraintStart_toStartOf="@+id/mainText"
            app:layout_constraintTop_toBottomOf="@+id/tableRow">
            <TextView
                android:id="@+id/dustName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Dust"
                android:textColor="#0064FF"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dust"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/dustminName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1.4"
                android:text="D.Min"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dustmin"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/pm1Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1.2"
                android:text="Pm1"
                android:layout_marginRight="10dp"
                android:textColor="#0064FF"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pm1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="0dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/mainFigure"
            app:layout_constraintStart_toStartOf="@+id/mainText"
            app:layout_constraintTop_toBottomOf="@+id/tableRow1">
            <TextView
                android:id="@+id/coName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Co"
                android:textColor="#0064FF"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/co"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/ch2oName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1.3"
                android:text="CH2o"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ch2o"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/co2Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1.2"
                android:text="CO2"
                android:layout_marginRight="10dp"
                android:textColor="#0064FF"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/co2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1.5"
                android:textColor="#0064FF"
                android:textSize="18dp"
                android:layout_marginRight="0dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listView_main_list"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="#00ff0000"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="@+id/mainFigure"
            app:layout_constraintStart_toStartOf="@+id/mainText"
            app:layout_constraintTop_toBottomOf="@+id/charView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="270dp"
            android:text="초미세먼지"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutCr"
            app:layout_constraintEnd_toEndOf="@id/layoutCr"
            app:layout_constraintStart_toStartOf="@+id/layoutCr" />

        <LinearLayout
            android:id="@+id/layoutCr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listView_main_list">

            <TextView
                android:id="@+id/Cr01"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:background="#00BFFF"
                android:gravity="center"
                android:text="매우좋음"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Cr02"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:background="#80E12A"
                android:gravity="center"
                android:text="좋음"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Cr03"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:background="#FFA500"
                android:gravity="center"
                android:text="나쁨"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Cr04"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:background="#FF0000"
                android:gravity="center"
                android:text="매우나쁨"
                android:textAlignment="center"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:text="기준 : WHO"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutCr"
            app:layout_constraintEnd_toEndOf="@+id/layoutCr"
            app:layout_constraintStart_toStartOf="@+id/layoutCr" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="320dp"
            android:text="0"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutCr"
            app:layout_constraintStart_toStartOf="@+id/layoutCr"
            app:layout_constraintTop_toBottomOf="@+id/layoutCr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="160dp"
            android:text="15"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutCr"
            app:layout_constraintStart_toStartOf="@+id/layoutCr"
            app:layout_constraintTop_toBottomOf="@+id/layoutCr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutCr"
            app:layout_constraintStart_toStartOf="@+id/layoutCr"
            app:layout_constraintTop_toBottomOf="@+id/layoutCr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="50"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutCr"
            app:layout_constraintStart_toStartOf="@+id/layoutCr"
            app:layout_constraintTop_toBottomOf="@+id/layoutCr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:text="50~"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutCr"
            app:layout_constraintStart_toStartOf="@+id/layoutCr"
            app:layout_constraintTop_toBottomOf="@+id/layoutCr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="280dp"
            android:text="가스누출"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutGas"
            app:layout_constraintEnd_toEndOf="@id/layoutGas"
            app:layout_constraintStart_toStartOf="@+id/layoutGas" />

        <LinearLayout
            android:id="@+id/layoutGas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutCr">

            <TextView
                android:id="@+id/Gas01"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:background="#80E12A"
                android:gravity="center"
                android:text="안 전"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Gas02"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:background="#FFA500"
                android:gravity="center"
                android:text="의  심"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Gas03"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:background="#FF0000"
                android:gravity="center"
                android:text="위  험"
                android:textAlignment="center"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="320dp"
            android:text="0"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutGas"
            app:layout_constraintStart_toStartOf="@+id/layoutGas"
            app:layout_constraintTop_toBottomOf="@+id/layoutGas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="110dp"
            android:text="1000"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutGas"
            app:layout_constraintStart_toStartOf="@+id/layoutGas"
            app:layout_constraintTop_toBottomOf="@+id/layoutGas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:text="2000"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutGas"
            app:layout_constraintStart_toStartOf="@+id/layoutGas"
            app:layout_constraintTop_toBottomOf="@+id/layoutGas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:text="3000~"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutGas"
            app:layout_constraintStart_toStartOf="@+id/layoutGas"
            app:layout_constraintTop_toBottomOf="@+id/layoutGas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="280dp"
            android:text="화재감시"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutFire"
            app:layout_constraintEnd_toEndOf="@id/layoutFire"
            app:layout_constraintStart_toStartOf="@+id/layoutFire" />

        <LinearLayout
            android:id="@+id/layoutFire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutGas">

            <TextView
                android:id="@+id/Fire01"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:background="#80E12A"
                android:gravity="center"
                android:text="안 전"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Fire02"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:background="#FFA500"
                android:gravity="center"
                android:text="의  심"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Fire03"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:background="#FF0000"
                android:gravity="center"
                android:text="발  생"
                android:textAlignment="center"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="320dp"
            android:text="0"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutFire"
            app:layout_constraintStart_toStartOf="@+id/layoutFire"
            app:layout_constraintTop_toBottomOf="@+id/layoutFire" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="110dp"
            android:text="1000"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutFire"
            app:layout_constraintStart_toStartOf="@+id/layoutFire"
            app:layout_constraintTop_toBottomOf="@+id/layoutFire" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:text="2000"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutFire"
            app:layout_constraintStart_toStartOf="@+id/layoutFire"
            app:layout_constraintTop_toBottomOf="@+id/layoutFire" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:text="3000~"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/layoutFire"
            app:layout_constraintStart_toStartOf="@+id/layoutFire"
            app:layout_constraintTop_toBottomOf="@+id/layoutFire" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>