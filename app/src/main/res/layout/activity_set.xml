<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:textSize="100dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="설정화면"
    android:gravity="center_horizontal" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navigationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/mainBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="@id/navigationLayout"
                app:layout_constraintEnd_toStartOf="@id/mainSet"
                app:layout_constraintStart_toStartOf="@id/navigationLayout"/>
            <Button
                android:id="@+id/mainSet"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/setting"
                app:layout_constraintBottom_toBottomOf="@id/navigationLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/mainBtn"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>